<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".PrincipalActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="295dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/lachofinal" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/recete" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Ingrese sus recetas"
                android:textAlignment="center"
                android:textColor="#EC5A2E"
                android:textSize="30dp" />
            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:ems="10"
                android:hint="Nombre"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/et_ingredientes"
                android:layout_width="match_parent"
                android:layout_height="261dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Ingredientes"
                android:textStyle="bold"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textColorHint="@android:color/darker_gray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/et_categoria"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:ems="10"
                android:hint="Categoria"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="@android:color/darker_gray" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/guardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estiloboton"
                android:text="Guardar Recetario"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/recetario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estiloboton"
                android:text="Buscar Recetario"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/Lista_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estiloboton"
                android:text="Lista"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/lv_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/estiloboton"
                android:text="Acerca de"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/chefle" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>